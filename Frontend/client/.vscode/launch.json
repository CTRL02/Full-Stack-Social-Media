{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Angular (Chrome HTTPS)",
      "url": "https://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "trace": true,
      "disableExtensions": true,
      "args": [
        "--ignore-certificate-errors"
      ]
    },
    {
      "type": "edge",
      "request": "launch",
      "name": "Angular (Edge HTTPS)",
      "url": "https://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "trace": true,
      "disableExtensions": true,
      "args": [
        "--ignore-certificate-errors"
      ]
    }
  ]
}
